<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTextWhite"
    tools:context="vn.app.tintocshipper.fragment.OrderDetailFragment">

    <RelativeLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:src="@drawable/ic_back" />

        <vn.app.tintocshipper.config.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/shop_order_detail"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            app:font_family="segoe_semi_bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextWhite"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_shop_order_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:background="@drawable/btn_but_blue"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <vn.app.tintocshipper.config.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/code_order"
                                android:textColor="@color/colorShopInfoOne"
                                android:textSize="14sp"
                                android:textAllCaps="true"
                                app:font_family="segoe_bold" />

                            <vn.app.tintocshipper.config.MyTextView
                                android:id="@+id/txt_order_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/colorShopInfoOne"
                                android:textSize="14sp"
                                app:font_family="segoe_bold" />

                            <vn.app.tintocshipper.config.MyTextView
                                android:id="@+id/txt_order_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/colorShopInfoOne"
                                android:textSize="14sp"
                                app:font_family="segoe_bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <vn.app.tintocshipper.config.MyTextView
                                android:id="@+id/txt_order_note"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorPause"
                                android:textSize="12sp"
                                app:font_family="segoe_regular"
                                />

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:layout_height="wrap_content">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="@string/total_guest_receipts"
                            android:textColor="@color/txt_title"
                            android:textSize="14sp"
                            app:font_family="segoe_semi_bold" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_total_guest_receipts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:textColor="@color/txt_title"
                            android:textSize="14sp"
                            app:font_family="segoe_semi_bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:background="@drawable/gray_edittext_border_square_box">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="@string/advance_money"
                            android:textColor="@color/txt_title"
                            android:textSize="14sp"
                            app:font_family="segoe_semi_bold" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_cod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:textColor="@color/txt_title"
                            android:textSize="14sp"
                            app:font_family="segoe_semi_bold" />

                    </RelativeLayout>

                    <vn.app.tintocshipper.config.MyTextView
                        android:id="@+id/txt_addon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/txt_title"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:font_family="segoe_semi_bold" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:animateLayoutChanges="true"
                    android:background="@color/colorShopInfoOne">

                    <vn.app.tintocshipper.config.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/sender_info"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="16sp"
                        app:font_family="segoe_bold" />

                    <ImageView
                        android:id="@+id/iv_show_hide"
                        android:layout_width="12dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:padding="20dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/name"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_sender_name"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sender_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_edittext_border_square_box"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp">

                            <vn.app.tintocshipper.config.MyTextView
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="@string/phone_number"
                                android:textSize="14sp"
                                android:textColor="@color/new_color_text"
                                app:font_family="segoe_regular" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <vn.app.tintocshipper.config.MyTextView
                                    android:id="@+id/txt_sender_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="8"
                                    android:textSize="14sp"
                                    android:textColor="@color/new_color_text"
                                    app:font_family="segoe_regular" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_toRightOf="@+id/txt_sender_phone"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_call_sender"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="8dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_phone" />

                                    <ImageView
                                        android:id="@+id/iv_sms_sender"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="8dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_mail" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_edittext_border_square_box"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <vn.app.tintocshipper.config.MyTextView
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:text="@string/order_address"
                                android:textSize="14sp"
                                android:textColor="@color/new_color_text"
                                app:font_family="segoe_regular" />

                            <vn.app.tintocshipper.config.MyTextView
                                android:id="@+id/txt_sender_address"
                                android:layout_width="0dp"
                                android:layout_weight="6"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/new_color_text"
                                app:font_family="segoe_regular" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <vn.app.tintocshipper.config.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="20dp"
                    android:text="@string/receiver_info"
                    android:textColor="@color/colorTextWhite"
                    android:background="@color/colorShopInfoOne"
                    android:textSize="16sp"
                    app:font_family="segoe_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/name"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_receiver_name"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/phone_number"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <vn.app.tintocshipper.config.MyTextView
                                android:id="@+id/txt_receiver_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_weight="8"
                                android:textSize="14sp"
                                android:textColor="@color/new_color_text"
                                app:font_family="segoe_regular" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@+id/txt_sender_phone"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_call_receiver"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_phone" />

                                <ImageView
                                    android:id="@+id/iv_sms_receiver"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_mail" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:paddingBottom="2dp"
                            android:paddingTop="8dp"
                            android:text="@string/order_address"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_receiver_address"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="8dp"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                    </LinearLayout>

                </LinearLayout>

                <vn.app.tintocshipper.config.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorShopInfoOne"
                    android:text="@string/commodity_info"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    app:font_family="segoe_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:orientation="horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/order_note_commodity_name"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_commodity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="6"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/new_color_text"
                            android:textSize="14sp"
                            app:font_family="segoe_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_edittext_border_square_box"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp">

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/myTextView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/weight"
                            android:textSize="14sp"
                            android:textColor="@color/new_color_text"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="6"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/new_color_text"
                            android:textSize="14sp"
                            app:font_family="segoe_regular" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/gray_border_square_box"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="gone">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/fee_shipping"
                            android:textSize="15sp"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_fee_shipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/fee_shipping"
                            android:textSize="15sp"
                            app:font_family="segoe_semi_bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/gray_border_square_box"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="gone">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/date_receiver_forecast"
                            android:textSize="15sp"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_date_receiver_forecast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/date_receiver_forecast"
                            android:textSize="15sp"
                            app:font_family="segoe_semi_bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/gray_border_square_box"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="gone">

                        <vn.app.tintocshipper.config.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/status_order"
                            android:textSize="15sp"
                            app:font_family="segoe_regular" />

                        <vn.app.tintocshipper.config.MyTextView
                            android:id="@+id/txt_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/status_order"
                            android:textSize="15sp"
                            app:font_family="segoe_semi_bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <vn.app.tintocshipper.config.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photo"
                        android:textColor="@color/color_black"
                        android:textSize="14sp"
                        app:font_family="segoe_regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="6dp">

                            <ImageView
                                android:id="@+id/iv_photo_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_upload_photo" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_photo_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_upload_photo" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_photo_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_upload_photo" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_call_support"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorShopInfoOne"
                android:gravity="center"
                android:orientation="horizontal">

                <vn.app.tintocshipper.config.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="@string/call_support"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="16sp"
                    app:font_family="segoe_bold" />

            </LinearLayout>

            <vn.app.tintocshipper.config.MyButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorShopInfoTwo"
                android:text="@string/confirm"
                android:textColor="@color/colorTextWhite"
                android:textSize="16sp"
                app:font_family="segoe_bold" />

            <vn.app.tintocshipper.config.MyButton
                android:id="@+id/btn_sms_support"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@drawable/green_box"
                android:text="Gửi SMS"
                android:textColor="@color/colorTextWhite"
                android:textSize="12sp"
                android:visibility="gone"
                app:font_family="segoe_regular" />

            <vn.app.tintocshipper.config.MyButton
                android:id="@+id/btn_rating"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/blue_box"
                android:text="@string/rating"
                android:textColor="@color/colorTextWhite"
                android:textSize="12sp"
                android:visibility="gone"
                app:font_family="segoe_regular" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
