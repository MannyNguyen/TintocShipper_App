<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_linearlayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border_square_box"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:padding="6dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/check_box" />

    <LinearLayout
        android:id="@+id/ll_id_shop_order"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:background="@drawable/blue_box"
        android:gravity="center"
        android:orientation="vertical">

        <vn.app.tintocshipper.config.MyTextView
            android:id="@+id/txt_shop_order_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="#744344"
            android:maxLines="2"
            android:textColor="@color/colorTextWhite"
            android:textSize="10sp"
            app:font_family="segoe_semi_bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.app.tintocshipper.config.MyTextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="8dp"
                android:textColor="@color/colorShopInfoOne"
                android:textSize="12sp"
                app:font_family="segoe_semi_bold"/>
            <vn.app.tintocshipper.config.MyTextView
                android:id="@+id/txt_recive_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:textColor="@color/colorShopInfoOne"
                android:textSize="12sp"
                app:font_family="segoe_semi_bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.app.tintocshipper.config.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:text="@string/item_address"
                android:textSize="12sp"
                app:font_family="segoe_semi_bold" />

            <vn.app.tintocshipper.config.MyTextView
                android:id="@+id/txt_receive_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="8dp"
                android:textColor="@color/txt_title"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                app:font_family="segoe_semi_bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>